{
  "exclude": [
    "node_modules",
    "vendor"
  ],
  "include": [
    "./"
  ],
  "files": [
    "../app1.ts",
    "../polyfills.ts"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "module":"es2015",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "pretty": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom",
      "esnext"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "preserveWhitespaces": true,
    "strictMetadataEmit" : false
  },
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
